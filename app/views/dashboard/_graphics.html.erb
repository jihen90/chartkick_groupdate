<div class="container">
  <div class="row">
    <div class="col-md-12 py-4">
      <div class="card">
        <h5 class="card-header">Ventas mensuales en los últimos 12 meses</h5>
        <div class="card-body">
          <%= line_chart @sales_grouped_by_month %>
        </div>
      </div>
    </div>
    <div class="col-md-12 py-4">
      <div class="card">
        <h5 class="card-header">Cantidad de ventas mensuales en los últimos 12 meses</h5>
        <div class="card-body">
          <%= column_chart @sales_quantity_grouped_by_month %>
        </div>
      </div>
    </div>
    <div class="col-md-12 py-4">
      <div class="card">
        <h5 class="card-header">Promedio de ventas mensuales en los últimos 12 meses</h5>
        <div class="card-body">
          <%= column_chart @sales_average_grouped_by_month %>
        </div>
      </div>
    </div>
  </div>
</div>


